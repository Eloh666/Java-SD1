import java.util.Comparator;
import java.util.Map;

public class CompTool implements Comparator<Float> {
	
	Map<String, Float> unsortedMap;
	
	public CompTool(Map<String, Float> unsortedMap)
	{
		this.unsortedMap = unsortedMap;
	}
	
	@Override
	public int compare(Object countryOne, Object countryTwo)
	{
		Comparable countryOneValue = (Comparable) unsortedMap.get(countryOne);
		Comparable countryTwoValue = (Comparable) unsortedMap.get(countryTwo);
		return countryTwoValue.compareTo(countryOneValue);
	}

}
